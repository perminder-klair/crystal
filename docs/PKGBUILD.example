pkgname=stravu-crystal-bin
pkgver=0.2.0
pkgrel=1
pkgdesc="Claude Code Commander for managing multiple Claude Code instances"
arch=('x86_64')
url="https://github.com/stravu/crystal"
license=('MIT')
depends=('gtk3' 'libnotify' 'nss' 'libxss' 'libxtst' 'xdg-utils' 'at-spi2-core' 'util-linux-libs')
provides=('stravu-crystal')
conflicts=('stravu-crystal')
source=("https://github.com/stravu/crystal/releases/download/v${pkgver}/stravu-crystal-${pkgver}-linux-x64.pkg.tar.xz")
sha256sums=('SKIP')  # Update with actual checksum

package() {
    # Extract the pre-built electron-builder pacman package
    bsdtar -xf "${srcdir}/stravu-crystal-${pkgver}-linux-x64.pkg.tar.xz" -C "${pkgdir}/"
}

